{% extends 'layouts/base.html.twig' %}

{% block title 'Se connecter !' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
             <h1 class="mt-5 mb-3 text-center">Veuillez vous connecter</h1>
             <p class="mb-5 text-center text-muted">Retrouver tous nos médias !</p>
            
            <form method="post">
                {% if error %}
                    <div class="alert alert-error" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" required autofocus>
                </div>   
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>
                
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
                #}

                <div class="mb-3 d-flex justify-content-between">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
                        <label class="form-check-label" for="remember_me">Se souvenir de moi </label>
                    </div>
                    <a href="#">Mot de passe oublié ?</a>
                </div>

                <button class="mt-3 btn btn-lg btn-primary btn-block" type="submit">
                    Connexion
                </button>

                <p class="mt-5 text-center text-muted">Pas encore enregistré ? <a href="#"> Créer un compte</a></p>
            </form>

        </div>
    </div>

{% endblock %}
