{% extends 'layouts/base.html.twig' %}

{% block title disc.title %}

{% block body %}

	
			<article>

				<h1>{{ disc.title }}</h1>
				<p>{{ disc.artist }} </p>
				<p>{{ disc.comments }}</p>

			</article>
			<a href="{{path('app_discs_edit', {id: disc.id})}}">Modifier</a> |
			<a href="#" onclick="event.preventDefault(); confirm('Etes vous sûr ?') &&
			document.getElementById('js-disc-delete-form').submit();">Supprimer</a> | 
			<a href="{{path('app_home')}}">Retour à l'accueil</a> 

			<form id="js-disc-delete-form"action="{{path('app_discs_delete', {id: disc.id})}}" method="post"
			 style="display:none;">
			 	<input type="hidden" name="csrf_token" value="{{ csrf_token('disc_deletion_' ~ disc.id)}}">
				<input type="hidden" name="_method" value="DELETE">
			</form>
	

{% endblock %}