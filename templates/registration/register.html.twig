{% extends 'layouts/base.html.twig' %}

{% block title 'Inscription' %}

{% block body %}
     {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-error rounded mb-3" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="row">
        <div class="col-md-6 mx-auto">
   
            <h1 class="text-center">Inscription</h1>
            <div class="mt-3">
            {{ form_start(registrationForm) }}
                <div class="mb-3 d-flex justify-content-between">
                    {{ form_row(registrationForm.firstName, {label: 'Pr√©nom'}) }}
                    {{ form_row(registrationForm.lastName, {label: 'Nom'}) }}
                </div>
                {{ form_row(registrationForm.email, {label: 'Email'}) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms, {label: 'Termes et conditions'}) }}

                <button type="submit" class="mt-3 btn btn-lg btn-primary btn-block">Inscription</button>
            {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
