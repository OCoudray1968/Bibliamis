{% extends 'layouts/base.html.twig' %}

{% block title movie.title %}

{% block body %}

	
			<article>

				<h1>{{ movie.title }}</h1>
				<p>{{ movie.director }} </p>
				<p>{{ movie.comments }}</p>

			</article>
			<a href="{{path('app_movies_edit', {id: movie.id})}}">Modifier</a> |
			<a href="#" onclick="event.preventDefault(); confirm('Etes vous sûr ?') &&
			document.getElementById('js-movie-delete-form').submit();">Supprimer</a> | 
			<a href="{{path('app_home')}}">Retour à l'accueil</a> 

			<form id="js-movie-delete-form"action="{{path('app_movies_delete', {id: movie.id})}}" method="post"
			 style="display:none;">
			 	<input type="hidden" name="csrf_token" value="{{ csrf_token('movie_deletion_' ~ movie.id)}}">
				<input type="hidden" name="_method" value="DELETE">
			</form>
	

{% endblock %}