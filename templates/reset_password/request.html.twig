{% extends 'layouts/base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
     <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mb-5 text-center">Réinitialiser <br> votre mot de passe</h1>

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <small>
                    Entrer votre Mail et nous vous enverrons
                     un lien pour réinitialiser votre mot de passe
                    </small>
                </div>

                <button class="mt-3 btn btn-primary btn-block">Envoyer un Mail de réinitialisation</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}