{% extends 'layouts/base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
   
     <div class="row">
        <div class="col-md-6 mx-auto">

          <h1 class="mt-3 mb-5 text-center">Réinitialiser <br> votre mot de passe</h1>

            {% for flashError in app.flashes('reset_password_error') %}
            <div class="mb-3 rounded alert alert-error" role="alert">{{ flashError }}</div>
            {% endfor %}
            
            <p class="mb-5 text-center muted">
            Entrer votre Mail et nous vous enverrons
            un lien pour réinitialiser votre mot de passe
            </p>
            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                

            <button class="mt-3 btn btn-primary btn-lg btn-block">Envoyer un Mail de réinitialisation</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}